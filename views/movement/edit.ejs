<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head'); %> 
<%- include('../partials/nav'); %> 

<body>
    <h2>Edit <%= movement.name %></h2>
    <div class="container-fluid center">
            <form action="/movements/<%= movement._id %>?_method=PUT" method="POST" class="form">
                <div class="mb-3 form-floating">
                    <input type="text" name="name" class="form-control" id="name" required
                        value="<%= movement.name %>">
                    <label for="name">Name</label>
                </div>
                <div class="mb-3 form-floating">
                    <textarea name="description" class="form-control" id="description"
                        ><%= movement.description %></textarea>
                    <label for="description">Description</label>
                </div>
                <div class="check-grid">
                    <% muscleGroups.forEach(function (muscle) { %>
                    <div class="form-check">
                            <input type="checkbox" name="musclesWorked[<%= muscle %>]" class="form-check-input"
                            <% movement.musclesWorked.forEach(function (m) { %>
                                <% if (m === muscle) { %> checked <% } %>
                            <% }); %>
                            >
                            <label for="<%= muscle %>">
                                <%= muscle %>
                            </label>
                        </div>
                        <% }); %>
                </div>
                <br>
                <br>
                <input type="submit" value="Submit Changes" class="btn btn-outline-secondary btn-lg mb-3 center">
            </form>
        </div>

    <%- include('../partials/footer'); %> 

</body>
</html>