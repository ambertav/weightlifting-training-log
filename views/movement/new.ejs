<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head'); %>
<%- include('../partials/nav'); %>


<body>
    <h2>Add a New Movement </h2>
    <div class="container-fluid center">
        <form action="/movements" method="POST" class="form">
            <div class="mb-5 form-floating">
                <input type="text" name="name" class="form-control" id="name" required>
                <label for="name">Name</label>
            </div>
            <div class="mb-5 form-floating">
                <textarea name="description" class="form-control" id="description"></textarea>
                <label for="description">Description</label>
            </div>
            <p>Muscles Worked:</p>
            <div class="check-grid mb-5">
                <% muscleGroups.forEach(function (muscle) { %>
                <div class="form-check">
                    <input type="checkbox" name="musclesWorked[<%= muscle %>]" class="form-check-input">
                    <label for="<%= muscle %>"><%= muscle %></label>
                </div>
                <% }); %>
            </div>
            <p>Cardio and/or Weighted?</p>
            <div class="mb-3">
                <div class="form-check">
                    <input type="checkbox" name="isCardio" class="form-check-input">
                    <label for="isCardio">Cardio</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" name="isWeighted" class="form-check-input">
                    <label for="isWeighted">Weighted</label>
                </div>
            </div>
            <br>
            <input type="submit" value="Add Movement" class="btn btn-outline-secondary btn-lg mb-5">
        </form>
    </div>

    <%- include('../partials/footer'); %>

</body>

</html>