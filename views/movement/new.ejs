<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head'); %> 
<%- include('../partials/nav'); %> 


<body>
    <h2>Add a New Movement </h2>
    <div class="container-fluid center">
        <form action="/movements" method="POST" class="form">
            <div class="mb-3 form-floating">
                <input type="text" name="name" class="form-control" id="name" required>
                <label for="name">Name</label>
            </div>
            <div class="mb-3 form-floating">
                <textarea name="description" class="form-control" id="description"></textarea>
                <label for="description">Description</label>
            </div>
            <div class="check-grid">
                <% muscleGroups.forEach(function (muscle) { %>
                <div class="form-check">
                        <input type="checkbox" name="musclesWorked[<%= muscle %>]" class="form-check-input">
                        <label for="<%= muscle %>">
                            <%= muscle %>
                        </label>
                    </div>
                    <% }); %>
            </div>
            <br>
            <input type="submit" value="Add Movement" class="btn btn-outline-secondary btn-lg mb-3">
        </form>
    </div>

    <%- include('../partials/footer'); %> 

</body>
</html>