<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head'); %> 
<%- include('../partials/nav'); %> 

<body>
    <h2>Movements</h2>
    <div class="container">
            <ul class="index-grid">
                <% movements.forEach(function (movement) { %>
                    <li class="list">
                        <h5>
                            <%= movement.name %>
                            <ul class="muscles">
                                <% movement.musclesWorked.forEach(function (m) { %>
                                    <li class="muscles">
                                        <%= m %>
                                    </li>
                                <% }); %> 
                            </ul>
                        </h5>
                        <% if (movement.createdBy !== null) { %>
                            <a href="/movements/<%= movement._id %>/edit" class="btn btn-outline-warning btn-sm">Edit</a>
                            <form action="/movements/<%= movement._id %>?_method=DELETE" method="POST">
                                <input type="submit" value="Delete" class="btn btn-outline-danger btn-sm">
                            </form>
                        <% } %> 
                    </li>
                <% }); %> 
            </ul>
        <div class="right mb-3">
            <a href="/movements/new" class="btn btn-outline-secondary btn-lg mb-3">Add a New Movement</a>
        </div>
    </div>

<%- include('../partials/footer'); %> 
</body>
</html>