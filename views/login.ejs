<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head'); %>

<body>
    <div class="container">
        <%- include('./partials/nav'); %>
        <div class="container-md mt-4">
            <h2 class="mx-5">Login</h2>
            <div class="vert-index">
                <div class="w-75 center mt-4">
                    <form action="/login" method="POST" autocomplete="off" class="form">
                        <div class="mb-1 form-floating">
                            <input type="email" name="email" class="form-control" id="email" required>
                            <label class="small-text" for="email">Email address</label>
                        </div>
                        <div class="mb-1 form-floating">
                            <input type="password" name="password" class="form-control" id="password" required>
                            <label class="small-text" for="password">Password</label>
                        </div>
                        <% if (error) { %>
                            <span class="text-danger my-2 fw-bold center"><%= error %></span>
                        <% } %>
                        <div class="center mt-5">
                            <input type="submit" value="Login" class="btn btn-outline-secondary">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/footer'); %>
</body>

</html>