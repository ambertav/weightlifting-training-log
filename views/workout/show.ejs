<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head'); %> 
<%- include('../partials/nav'); %> 

<body>
    <h2><%= workout.day %></h2>
    <div class="container">
        <div class="index">
            <% for (i = 0; i < workout.exercise.length; i++) { %>
                <div class="exercise">
                    <h3><%= workout.exercise[i].name %></h3>
                    <p>Weight: <%= workout.exercise[i].weight %></p>
                    <p>Sets: <%= workout.exercise[i].sets %></p>
                    <p>Repetitions pet Set: <%= workout.exercise[i].reps %></p>
                    <div class="form-check form-switch">
                        <input type="checkbox" name="complete" role="switch" class="form-check-input complete">
                        <label for="switch" class="form-check-label">Complete</label>
                    </div>
                </div>
                <% } %> 
        </div>
        <br>
        <br>
        <div class="progress" role="progressbar" aria-valuenow="0" aria-valuemax="100" aria-valuemin="0">
            <div class="progress-bar progress-bar-striped bg-success" style="width: 0%"></div>
        </div>
        <br>
        <br>
        <div class="center">
                <a href="/workouts" class="btn btn-outline-secondary mb-3">Back to Workouts</a>
        </div>

        
    </div>
    <%- include('../partials/footer'); %> 
        
</body>
</html>